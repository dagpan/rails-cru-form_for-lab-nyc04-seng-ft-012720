<h2>These Are All The Songs</h2>

<% @songs.each do |song| %>
  <ul>
     <li>
     <h3>Song Name: <%= link_to song.name, song %></h3>
     </li>
  </ul>
<% end %>
<h4><%= link_to "Create A New Song", new_song_path %></h4>

  <%= form_tag search_path do %>
        <label>Search by name:</label>
        <%= text_field_tag :'search' %><br>
        <%= submit_tag "Search" %>
    <% end%>
    <br/>

